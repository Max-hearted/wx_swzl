page{
  background-color: rgb(248, 246, 246);
}
.user{
  /* 弹性盒子模型 */
  display: flex;
  /* 沿水平方向 */
  flex-direction: row;
  /* 不换行 */
  flex-wrap: nowrap;
  /* 项目排列 */
  justify-content: flex-start;
  /* 垂直居中 */
  align-items: center;
  /* 内边距 */
  padding: 10rpx;
  /* 背景色 */
  background-color: #fff;
}
.user-header{
  height: 210rpx;
  width: 210rpx;
  border-radius: 5rpx;
}
.user-body{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-content: space-around;
  margin-left: 30rpx;
  height: 160rpx;
}
.username{
  font-size: 36rpx;
  font-weight: bold;
  color: rgb(78, 75, 75);
}
.gender{
  font-size: 40rpx;
  color: #ccc;
}
/* 我的 */
.menu-list{
  /* 上边距 */
  margin-top: 20rpx;
  /* 弹性盒子布局 */
  display: flex;
  /* 列布局 */
  flex-direction: column;
}
/* 我的启事列表 */
.menu-my{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0 20rpx 20rpx;
  background-color: #fff;
  margin-top: 5rpx;
  width: 100%;
}
.menu-my>image{
  height: 70rpx;
  width: 70rpx;
}
.menu-my>view{
  padding-left: 10rpx;
}